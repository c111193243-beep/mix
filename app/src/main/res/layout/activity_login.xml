<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metalBackground"
    android:padding="24dp">

    <!-- App 標題（改成深灰） -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="疲勞駕駛警示系統"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/textDark"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email 欄位（文字/Hint 改深灰） -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="電子信箱"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/silverGray"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/textLight"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/textDark"
            android:textColorHint="@color/textLight"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 密碼欄位（文字/Hint、眼睛圖示 改深灰） -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="密碼"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/silverGray"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/textLight"
        app:hintTextColor="@color/textLight"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/emailLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/textDark"
            android:textColorHint="@color/textLight"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 記住帳號（維持原色；若也想加深可改成 @color/textLight） -->
    <CheckBox
        android:id="@+id/checkboxRemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="記住帳號"
        android:textColor="@color/grayHint"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/passwordLayout"
        app:layout_constraintStart_toStartOf="@id/passwordLayout"/>

    <!-- 登入按鈕 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="登入"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/titaniumBlueGray"
        app:cornerRadius="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/checkboxRemember"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ✅ 管理員登入卡片（不變） -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:strokeColor="@color/inputStrokeGray"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/app_name"
                android:tint="@color/titaniumBlueGray"
                app:srcCompat="@android:drawable/ic_menu_manage"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理員登入"
                    android:textColor="@color/textDark"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="進入後台檢視資料庫與用戶資料"
                    android:textColor="@color/textLight"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textSize="20sp"
                android:textColor="@color/grayHint"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

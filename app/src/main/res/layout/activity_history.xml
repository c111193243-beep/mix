<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLightGray">

    <!-- 上方 Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/historyToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:title="疲勞紀錄"
        app:titleCentered="true"
        app:titleTextColor="@color/textDark"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:menu="@menu/menu_history" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <!-- 篩選列 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvSelectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目前：全部"
                    android:textColor="@color/textLight"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="全部"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/titaniumBlueGray"
                        app:cornerRadius="12dp" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPickDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="選擇日期"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/silverGray"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"/>

        <!-- 空狀態提示 -->
        <TextView
            android:id="@+id/tvEmptyHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="目前沒有紀錄"
            android:textAlignment="center"
            android:textColor="@color/textLight"
            android:visibility="gone"
            android:layout_marginTop="12dp"/>

        <!-- 載入中指示器 -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress"
            style="@style/Widget.Material3.CircularProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:indicatorSize="48dp"
            app:trackThickness="4dp" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

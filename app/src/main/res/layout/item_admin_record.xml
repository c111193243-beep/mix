<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="@color/metalCard"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/metalAccent"
    app:strokeColor="@color/metalAccent"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- 文字資訊 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-08-27 16:30"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID 1 • Score 7.0"
                android:textColor="@color/textSecondary"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- 動作鈕群 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:icon="@drawable/ic_edit_24"
                android:contentDescription="編輯"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:icon="@drawable/ic_delete_24"
                android:contentDescription="刪除"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

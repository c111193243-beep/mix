<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 固定使用淺色主題 -->
    <style name="Theme.DriveSafe" parent="Theme.Material3.Light.NoActionBar">
        <!-- 主色調 -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 背景顏色 -->
        <item name="android:windowBackground">@color/bgLightGray</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/textDark</item>

        <!-- Toolbar / Card / Button 的顏色 -->
        <item name="colorSecondary">@color/titaniumBlueGray</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- 禁止夜間模式自動切換 -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

</resources>
